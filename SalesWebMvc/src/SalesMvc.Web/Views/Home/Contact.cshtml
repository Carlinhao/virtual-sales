
@{
    ViewData["Title"] = "Contact";
}

<main role="main">
    <br />
    <br />
    <div class="container">
        <div class="row">
            <aside class="col-md-6">
                <h4 class="subtitle-doc">
                    # Other contacts
                </h4>
                <div id="code_desc_simple">
                    <div class="box">
                        <dl>
                            <dt>Devolução/Garantia: </dt>
                            <dd>devolucao@lojavirtual.com.br</dd>
                        </dl>
                        <dl>
                            <dt>Televendas: </dt>
                            <dd>(61) 4000-2000</dd>
                        </dl>
                        <dl>
                            <dt>SAC:</dt>
                            <dd>sac@lojavirtual.com.br</dd>
                        </dl>
                    </div> <!-- box.// -->
                </div> <!-- code-wrap.// -->
            </aside>
            <aside class="col-sm-6">

                <h4 class="subtitle-doc">
                    # Contact
                </h4>
                <div id="code_payment">

                    <article class="card">
                        <div class="card-body p-5">
                        @if(ViewData["MSG_S"] != null)
                        {
                            <p class="alert alert-success">@ViewData["MSG_S"]</p>
                        }
                            <form role="form" method="post" action="/Home/ActionContact">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                        </div>
                                        <input type="text" id="name" class="form-control" name="name" placeholder=""
                                               required="">
                                    </div> <!-- input-group.// -->
                                </div> <!-- form-group.// -->

                                <div class="form-group">
                                    <label for="email">E-mail</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-at"></i></span>
                                        </div>
                                        <input type="text" id="email" class="form-control" name="email" placeholder="">
                                    </div> <!-- input-group.// -->
                                </div> <!-- form-group.// -->

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="text"><span class="hidden-xs">Text</span> </label>
                                            <div class="form-inline">
                                                <textarea class="form-control" name="text" id="text" style="width:100%"></textarea>

                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- row.// -->
                                <button class="subscribe btn btn-primary btn-block" type="submit"> Send </button>
                            </form>
                        </div> <!-- card-body.// -->
                    </article> <!-- card.// -->

                </div> <!-- code-wrap.// -->

            </aside>
        </div>
    </div>
</main>