@model Customer

@{
	ViewData["Title"] = "Register Costumer";
}
<form asp-action="RegisterCostumer" asp-controller="Home" method="post">
	<main role="main">
		<section class="container" style="margin-top: 50px">
			<div class="row">
				<aside class="col-sm-6">
					<h3 class="subtitle-doc">
						Register Customer
					</h3>
					<div id="code_register_1">
						<div class="card">
							<header class="card-header">
								<a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Log in</a>
								<h4 class="card-title mt-2">Sign up</h4>
							</header>
							<article class="card-body">
								@if (TempData["MSG_S"] != null)
								{
									<p class="alert alert-success">@TempData["MSG_S"]</p>
								}
								<div class="form-row">
									<div class="col form-group">
										<label asp-for="Name">Name</label>
										<input type="text" asp-for="Name" class="form-control" placeholder="">
										<span asp-validation-for="Name"></span>
									</div>
									<div class="col form-group">
										<label asp-for="BirthDate">Birth Date</label>
										<input type="text" asp-for="BirthDate" class="form-control" placeholder="">
										<span asp-validation-for="BirthDate"></span>
									</div>
								</div>
								<div class="form-group">
									<label class="form-check form-check-inline">
										<input class="form-check-input" type="radio" asp-for="Gender" value="M">
										<span class="form-check-label">Male</span>
									</label>
									<label class="form-check form-check-inline">
										<input class="form-check-input" type="radio" asp-for="Gender" value="F">
										<span class="form-check-label">Female</span>
									</label>
									<span asp-validation-for="Gender"></span>
								</div>
								<div class="form-group">
									<label asp-for="CPF">Cpf</label>
									<input type="text" asp-for="CPF" class="form-control" placeholder="">
									<span asp-validation-for="CPF"></span>
									<small class="form-text text-muted">
										We'll never share your cpf with anyone else.
									</small>
								</div>
								<div class="form-row">
									<div class="form-group col-md-6">
										<label asp-for="Tel">Phone number</label>
										<input type="text" asp-for="Tel" class="form-control">
										<span asp-validation-for="Tel"></span>
									</div>
								</div>
								<div class="form-group">
									<label asp-for="Email">E-mail</label>
									<input type="text" asp-for="Email" class="form-control" placeholder="">
									<span asp-validation-for="Email"></span>
								</div>
								<div class="form-group">
									<label asp-for="Password">Create password</label>
									<input class="form-control" asp-for="Password" type="password">
									<span asp-validation-for="Password"></span>
								</div>
								<div class="form-group">
									<button type="submit" class="btn btn-primary btn-block">Register</button>
								</div>
							</article>
							<div class="border-top card-body text-center">Have an account? <a asp-action="Login" asp-controller="Home">Log In</a></div>
						</div>
					</div>
				</aside>
			</div>
		</section>
	</main>
</form>