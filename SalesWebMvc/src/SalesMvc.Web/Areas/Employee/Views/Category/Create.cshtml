@model Category
@{
	ViewData["Title"] = "Register Category";
}

<h1>Register Category</h1>

<form method="post">
  <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" placeholder="Insert category name." >
    <span asp-validation-for="Name" class="text-danger" ></span>
  </div>
  <div class="form-group">
    <label asp-for="Slug"></label>
    <input asp-for="Slug" class="form-control" placeholder="Insert slug name." >
    <span asp-validation-for="Slug" class="text-danger" ></span>
  </div>
  <div class="form-group">
    <label asp-for="CategoryFatherId"></label>
    <select asp-for="CategoryFatherId" class="form-control" asp-items="@ViewBag.Categories">
        <option value="">Select</option> 
    </select>
    <span asp-validation-for="CategoryFatherId" class="text-danger" ></span>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>