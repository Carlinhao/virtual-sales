@model Category
@{
	ViewData["Title"] = "Update Category";
}

<h1>Update Category</h1>

<form method="post">
	<input type="hidden" asp-for="Id" />
	<div class="form-group">
		<label asp-for="Name">Name</label>
		<input asp-for="Name" class="form-control" placeholder="Insert category name.">
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Slug">Slug</label>
		<input asp-for="Slug" class="form-control" placeholder="Insert slug name.">
		<span asp-validation-for="Slug" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="CategoryFatherId">Category Father</label>
		<select asp-for="CategoryFatherId" class="form-control" asp-items="@ViewBag.Categories">
			<option value="">Select</option>
		</select>
		<span asp-validation-for="CategoryFatherId" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>