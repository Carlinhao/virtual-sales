@model IPagedList<Product>
@{
	ViewData["Title"] = "Employee";
	var search = Context.Request.Query["search"];
}

<h1>Customer</h1>
<br />
<br />
<!--Search Form--> >
<form method="get">
   <div class="form-group">
    <label for="search" ></label>
    <input type="text" name="search" value="@search" id="searchId"class="form-control" placeholder="Insert product name." >
  </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<br />
<br />

@if (TempData["MSG_S"] != null)
{
	<p class="alert alert-success">@TempData["MSG_S"]</p>
}

@if (Model.Count > 0)

{
	<div class="table-responsive">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th scope="col">@Html.DisplayNameFor(model => model.First().Id)</th>
					<th scope="col">@Html.DisplayNameFor(model => model.First().Name)</th>
					<th scope="col">@Html.DisplayNameFor(model => model.First().Category)</th>
					<th scope="col">@Html.DisplayNameFor(model => model.First().Value)</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var product in Model)
				{
					<tr>
						<th scope="row">@product.Id</th>
						<td>@product.Name</td>
						<td>@product.CategoryId </td>
						<td>@product.Value </td>
						<td>
							<a asp-action="Update" asp-route-id="@product.Id" class="btn btn-secondary">Update</a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	@Html.PagedListPager( (IPagedList)Model, page => Url.Action("Index", new { page = page, search = search }) )
}
else
{
	<span>Register not found</span>
}
